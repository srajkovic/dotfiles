sudo apt-get install zsh
# install emacs cask
curl -fsSL https://raw.githubusercontent.com/cask/cask/master/go | python
chsh -s /usr/bin/zsh # switch to brew zsh
sudo gem install colorize rake
sudo rake  # symlink everything into place
cd ~/.emacs.d
cask # setup everything for emacs
echo "Might be a good idea to reboot"
